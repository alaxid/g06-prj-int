<div id="homepage">
  <table>
    <tbody>
    <% counter = 0 %>
    <% @services.each do |service| %>
        <% if counter % 4 == 0 then %>
            <tr>
        <% end %>
        <td>
          <img src="/public/images/bus.png" alt="teste" />
          <%= link_to service.serviceName, "http://localhost:3000/services/"+service.serviceName %></td>
        <% counter = counter + 1 %>
        <% if (counter % 4 == 0) || (counter == @services.size) then %>
            </tr>
        <% end %>
    <% end %>

    </tbody>
  </table>

</div>