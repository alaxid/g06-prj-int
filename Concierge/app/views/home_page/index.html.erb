
  <table>
    <tbody>
    <% counter = 0 %>
    <% @services.each do |service| %>
        <% if counter % 4 == 0 then %>
            <tr>
        <% end %>
        <td>
          <%= link_to image_tag("/images/letra-c.png"),
                      "http://localhost:3000/services/"+service.serviceName, :id => "serviceLink" %>
        </td>
        <% counter = counter + 1 %>
        <% if (counter % 4 == 0) || (counter == @services.size) then %>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>


<script>
    $('#serviceLink').live('click', function(){
      alert($(this).attr('href'));
    });
</script>