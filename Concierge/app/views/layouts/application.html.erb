<!DOCTYPE html>
<html>
<head>
  <title>Concierge</title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <!--
<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css"/>
<script src="http://code.jquery.com/jquery-1.5.2.min.js"></script>
<script src="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js"></script>          -->


</head>
<body>
<div data-role="page" data-position="inline">
  <div data-role="header" data-position="fixed">
    <a href="index.html" class="ui-btn-right" data-icon="gear" icon>Login</a>

    <h1 id="logo" class="ui-title">Concierge</h1>
  </div>


  <div id="content" data-role="content">
    <%= yield %>
  </div>


    <div data-role="footer" data-role='fieldcontain' width="100%" id="hidnavbar" style="text-align:center; visibility:hidden">
      <form id='searchform'>
        <input type='search' name='password' id='search' value='' width="100%"/>
      </form>
    </div>


  <div data-role="footer" data-id="navbar" data-position="fixed">
    <div data-role="navbar">
      <ul>
        <li style="width:25%"><a href="b.html" data-icon="grid">History</a></li>
        <li id="searchmanhoso" style="width:50%">
          <a href="" data-icon="search">Search</a></li>
        <li style="width:25%"><a href="b.html" data-icon="gear">Options</a></li>
      </ul>
    </div>
    <!-- /navbar -->
  </div>
  <!-- /footer -->


</div>


<!--<div style="clear:both;"></div>-->


</body>

<script type="text/javascript">

    $("#searchmanhoso").live('click', function() {


      if ($("#hidnavbar").css("visibility") == "hidden") {
          $("#hidnavbar").hide().css({visibility: "visible"}).fadeIn("slow");
        }  else {
          $("#hidnavbar").fadeOut("slow", function() {
                $(this).show().css({visibility: "hidden"});
               $("#searchmanhoso").find("a").removeClass("ui-btn-active");
          });

        }


    });

    $('#searchform').submit(function() {
        $("#hidnavbar").fadeOut("slow", function() {
                $(this).show().css({visibility: "hidden"});
          });
        return false;
    });

</script>
</html>
